<Controls:MetroWindow x:Class="FitnessStudio.MVVM.View.SplashScreen"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="Fitness Studio - Wczytywanie"
                      WindowStartupLocation="CenterScreen"
                      WindowStyle="None"
                      ResizeMode="NoResize"
                      Width="1280" Height="720"
                      GlowBrush="DodgerBlue"
                      BorderThickness="2"
                      Background="White"
                      ShowTitleBar="False"
                      AllowsTransparency="True"
                      WindowTransitionsEnabled="True">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Logo na środku -->
        <Image Source="/Resources/logo.png" Width="360" Height="90" VerticalAlignment="Center" Margin="0,0,0,16"/>

        <!-- ProgressBar Sims-style -->
        <Controls:MetroProgressBar Name="LoadingBar" 
                     Width="400"
                     Height="30"
                     Margin="0,0,0,8"
                     Foreground="Black"
                     Background="Gray"
                     BorderBrush="Transparent"
                     BorderThickness="5"
                     IsIndeterminate="True"/>

        <!-- Tekst pod paskiem -->
        <TextBlock Name="SplashScreenText"
                   Text="Pouring a protein shake..."
                   Foreground="Black"
                   FontSize="32"
                   HorizontalAlignment="Center"
                   FontWeight="Light" 
                   Margin="0,0,0,30"/>
    </StackPanel>
</Controls:MetroWindow>