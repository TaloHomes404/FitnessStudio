<UserControl x:Class="FitnessStudio.MVVM.View.HomeContents.CorrectPostureContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitnessStudio.MVVM.View.HomeContents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          ShadowDepth="4" 
                          Direction="315" 
                          Color="#CCCCCC" 
                          Opacity="0.5" 
                          BlurRadius="10"/>
        <BlurEffect x:Key="BackgroundBlur" Radius="3"/>
        <!-- Animation for hover effect -->
        <Style x:Key="PostureCircleStyle" TargetType="Border">
            <Setter Property="Background" Value="#303040"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="CornerRadius" Value="60"/>
            <Setter Property="Effect" Value="{StaticResource BackgroundBlur}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4AD1B8"/>
                    <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header Section -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="16,15,0,20">
            <Image Source="/Resources/correct_posture_icon.png" Width="64" Height="64" Margin="0,0,15,0"/>
            <TextBlock Text="Fix Your Posture, Improve Your Life" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#E74C3C"
                       VerticalAlignment="Center"/>
        </StackPanel>
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <!-- Center Icon -->
            <Border Width="180" Height="180" 
                    Background="#E5F9F3" 
                    CornerRadius="90"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Ellipse Width="160" Height="160" Fill="#C1F4E8"/>
                    <Ellipse Width="140" Height="140" Fill="#4AD1B8"/>
                    <TextBlock Text="Perfect Posture" 
                              FontSize="18" 
                              Foreground="White" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              TextWrapping="Wrap"
                              TextAlignment="Center"/>
                </Grid>
            </Border>
            <!-- Posture Exercise Circles -->
            <!-- Back -->
            <Border Style="{StaticResource PostureCircleStyle}"
                    Margin="250,0,0,150"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MouseLeftButtonDown="PostureCircle_Click"
                    Tag="Back">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Back" 
                              FontSize="16" 
                              Foreground="White" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="4 exercises" 
                              FontSize="12" 
                              Foreground="#BBBBBB" 
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Eyes -->
            <Border Style="{StaticResource PostureCircleStyle}"
                    Margin="250,150,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MouseLeftButtonDown="PostureCircle_Click"
                    Tag="Eyes">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Eyes" 
                              FontSize="16" 
                              Foreground="White" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="3 exercises" 
                              FontSize="12" 
                              Foreground="#BBBBBB" 
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Neck -->
            <Border Style="{StaticResource PostureCircleStyle}"
                    Margin="0,0,250,150"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MouseLeftButtonDown="PostureCircle_Click"
                    Tag="Neck">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Neck" 
                              FontSize="16" 
                              Foreground="White" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="4 exercises" 
                              FontSize="12" 
                              Foreground="#BBBBBB" 
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Full Body -->
            <Border Style="{StaticResource PostureCircleStyle}"
                    Margin="0,150,250,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MouseLeftButtonDown="PostureCircle_Click"
                    Tag="FullBody">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Full Body" 
                              FontSize="16" 
                              Foreground="White" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="5 exercises" 
                              FontSize="12" 
                              Foreground="#BBBBBB" 
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Wrists -->
            <Border Style="{StaticResource PostureCircleStyle}"
                    Margin="0,230,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MouseLeftButtonDown="PostureCircle_Click"
                    Tag="Wrists">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Wrists" 
                              FontSize="16" 
                              Foreground="White" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="3 exercises" 
                              FontSize="12" 
                              Foreground="#BBBBBB" 
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Legs -->
            <Border Style="{StaticResource PostureCircleStyle}"
                    Margin="0,0,0,230"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MouseLeftButtonDown="PostureCircle_Click"
                    Tag="Legs">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Legs" 
                              FontSize="16" 
                              Foreground="White" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="4 exercises" 
                              FontSize="12" 
                              Foreground="#BBBBBB" 
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Popup for exercises -->
            <Border x:Name="ExercisePopup" 
                    Visibility="Collapsed"
                    Background="#303040" 
                    CornerRadius="20"
                    BorderThickness="0"
                    Effect="{StaticResource CardShadow}"
                    Width="500" 
                    Height="350"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Panel.ZIndex="100">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Header -->
                    <Grid Grid.Row="0">
                        <TextBlock x:Name="PopupTitle" 
                                  Text="Back Exercises" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="#E5F9F3" 
                                  Margin="20,20,0,10"
                                  HorizontalAlignment="Left"/>
                        <Button Content="✕" 
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="White"
                                FontSize="18"
                                Margin="0,10,10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Click="ClosePopup_Click"/>
                    </Grid>
                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" Margin="20,0,20,0">
                        <StackPanel x:Name="ExerciseContent">
                            <!-- This will be filled programmatically -->
                        </StackPanel>
                    </ScrollViewer>
                    <!-- Footer with button -->
                    <Grid Grid.Row="2" Margin="20">
                        <Button Content="Start Exercises" 
                                Background="#4AD1B8"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Height="45"
                                Width="200">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="22.5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
            <!-- Semi-transparent overlay when popup is visible -->
            <Rectangle x:Name="PopupOverlay"
                       Fill="#80000000"
                       Visibility="Collapsed"
                       Grid.RowSpan="2"
                       Panel.ZIndex="99"/>
        </Grid>
    </Grid>
</UserControl>