<UserControl x:Class="FitnessStudio.MVVM.View.HomeContents.MotivationContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitnessStudio.MVVM.View.HomeContents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          ShadowDepth="4" 
                          Direction="315" 
                          Color="#CCCCCC" 
                          Opacity="0.5" 
                          BlurRadius="10"/>
        <BlurEffect x:Key="BackgroundBlur" Radius="3"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header Section -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="16,15,0,20">
            <Image Source="/Resources/motivation_icon.png" Width="64" Height="64" Margin="0,0,15,0"/>
            <TextBlock Text="Fuel your mind with powerful words" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#FF6B6B"
                       VerticalAlignment="Center"/>
        </StackPanel>
        <!-- Cards Carousel Container -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>
            <!-- Left Card (Blurred) -->
            <Border x:Name="Card1" 
                    Grid.Column="0" 
                    Height="320"
                    Margin="0,10,10,0" 
                    Background="#4A2BAF" 
                    CornerRadius="24" 
                    BorderBrush="Transparent" 
                    BorderThickness="1" 
                    Effect="{StaticResource BackgroundBlur}"
                    Panel.ZIndex="1">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Quote Text -->
                    <TextBlock Grid.Row="0" 
                              Text="The only person you should try to be better than is the person you were yesterday." 
                              FontSize="22" 
                              Foreground="White" 
                              TextWrapping="Wrap"
                              FontWeight="Medium"
                              VerticalAlignment="Center"
                              TextAlignment="Center"
                              Margin="10,0,10,0"/>
                    <!-- Author Name -->
                    <TextBlock Grid.Row="1" 
                              Text="— Anonymous" 
                              FontSize="16" 
                              Foreground="#E0E0E0" 
                              HorizontalAlignment="Right" 
                              Margin="0,15,10,0"
                              FontStyle="Italic"/>
                </Grid>
            </Border>
            <!-- Middle Card (Active Focus) -->
            <Border x:Name="Card2" 
                    Grid.Column="1" 
                    Height="350"
                    Margin="0,0,0,0" 
                    Background="White" 
                    CornerRadius="30" 
                    BorderBrush="#F0F0F0" 
                    BorderThickness="1" 
                    Effect="{StaticResource CardShadow}"
                    Panel.ZIndex="2">
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Decorative Element -->
                    <Path Grid.Row="0"
                          Data="M0,0 L60,0"
                          Stroke="#FF6B6B"
                          StrokeThickness="4"
                          HorizontalAlignment="Left"
                          Margin="0,0,0,20"
                          StrokeEndLineCap="Round"/>
                    <!-- Quote Text -->
                    <TextBlock Grid.Row="1" 
                              Text="The future belongs to those who believe in the beauty of their dreams." 
                              FontSize="28" 
                              Foreground="#2D3142" 
                              TextWrapping="Wrap"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              LineHeight="40"/>
                    <!-- Author Name -->
                    <TextBlock Grid.Row="2" 
                              Text="— Eleanor Roosevelt" 
                              FontSize="18" 
                              Foreground="#666666" 
                              HorizontalAlignment="Right" 
                              Margin="0,15,0,0"
                              FontStyle="Italic"/>
                </Grid>
            </Border>
            <!-- Right Card (Blurred) -->
            <Border x:Name="Card3" 
                    Grid.Column="2" 
                    Height="320"
                    Margin="10,10,0,0" 
                    Background="#FF8C42" 
                    CornerRadius="24" 
                    BorderBrush="Transparent" 
                    BorderThickness="1" 
                    Effect="{StaticResource BackgroundBlur}"
                    Panel.ZIndex="1">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Quote Text -->
                    <TextBlock Grid.Row="0" 
                              Text="Strength doesn't come from what you can do. It comes from overcoming the things you once thought you couldn't." 
                              FontSize="22" 
                              Foreground="White" 
                              TextWrapping="Wrap"
                              FontWeight="Medium"
                              VerticalAlignment="Center"
                              TextAlignment="Center"
                              Margin="10,0,10,0"/>
                    <!-- Author Name -->
                    <TextBlock Grid.Row="1" 
                              Text="— Rikki Rogers" 
                              FontSize="16" 
                              Foreground="#EEEEEE" 
                              HorizontalAlignment="Right" 
                              Margin="0,15,10,0"
                              FontStyle="Italic"/>
                </Grid>
            </Border>
            <!-- Card 4 (Hidden) -->
            <Border x:Name="Card4" 
                    Grid.Column="2" 
                    Height="320"
                    Visibility="Collapsed"
                    Margin="10,10,0,0" 
                    Background="#3498DB" 
                    CornerRadius="24" 
                    BorderBrush="Transparent" 
                    BorderThickness="1" 
                    Effect="{StaticResource BackgroundBlur}"
                    Panel.ZIndex="1">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Quote Text -->
                    <TextBlock Grid.Row="0" 
                              Text="Success is not final, failure is not fatal: It is the courage to continue that counts." 
                              FontSize="22" 
                              Foreground="White" 
                              TextWrapping="Wrap"
                              FontWeight="Medium"
                              VerticalAlignment="Center"
                              TextAlignment="Center"
                              Margin="10,0,10,0"/>
                    <!-- Author Name -->
                    <TextBlock Grid.Row="1" 
                              Text="— Winston Churchill" 
                              FontSize="16" 
                              Foreground="#EEEEEE" 
                              HorizontalAlignment="Right" 
                              Margin="0,15,10,0"
                              FontStyle="Italic"/>
                </Grid>
            </Border>
            <!-- Card 5 (Hidden) -->
            <Border x:Name="Card5" 
                    Grid.Column="2" 
                    Height="320"
                    Visibility="Collapsed"
                    Margin="10,10,0,0" 
                    Background="#27AE60" 
                    CornerRadius="24" 
                    BorderBrush="Transparent" 
                    BorderThickness="1" 
                    Effect="{StaticResource BackgroundBlur}"
                    Panel.ZIndex="1">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Quote Text -->
                    <TextBlock Grid.Row="0" 
                              Text="The only way to do great work is to love what you do. If you haven't found it yet, keep looking. Don't settle." 
                              FontSize="22" 
                              Foreground="White" 
                              TextWrapping="Wrap"
                              FontWeight="Medium"
                              VerticalAlignment="Center"
                              TextAlignment="Center"
                              Margin="10,0,10,0"/>
                    <!-- Author Name -->
                    <TextBlock Grid.Row="1" 
                              Text="— Steve Jobs" 
                              FontSize="16" 
                              Foreground="#EEEEEE" 
                              HorizontalAlignment="Right" 
                              Margin="0,15,10,0"
                              FontStyle="Italic"/>
                </Grid>
            </Border>
            <!-- Navigation Controls -->
            <Button x:Name="PrevButton"
                    Grid.Column="0" 
                    Content="❮" 
                    Width="40" 
                    Height="40" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center" 
                    Margin="-20,0,0,0" 
                    Background="#FFFFFF" 
                    Foreground="#333333"
                    FontSize="18"
                    Click="PrevButton_Click"
                    Panel.ZIndex="3">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="NextButton"
                    Grid.Column="2" 
                    Content="❯" 
                    Width="40" 
                    Height="40" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Margin="0,0,-20,0" 
                    Background="#FFFFFF" 
                    Foreground="#333333"
                    FontSize="18"
                    Click="NextButton_Click"
                    Panel.ZIndex="3">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
            <!-- Indicator Dots -->
            <StackPanel x:Name="DotsPanel"
                        Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom" 
                        Margin="0,0,0,-30">
                <Ellipse x:Name="Dot1" Width="10" Height="10" Fill="#DDDDDD" Margin="5"/>
                <Ellipse x:Name="Dot2" Width="10" Height="10" Fill="#FF6B6B" Margin="5"/>
                <Ellipse x:Name="Dot3" Width="10" Height="10" Fill="#DDDDDD" Margin="5"/>
                <Ellipse x:Name="Dot4" Width="10" Height="10" Fill="#DDDDDD" Margin="5"/>
                <Ellipse x:Name="Dot5" Width="10" Height="10" Fill="#DDDDDD" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>