<UserControl x:Class="FitnessStudio.MVVM.View.HomeContents.MotivationContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitnessStudio.MVVM.View.HomeContents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow" 
                          ShadowDepth="4" 
                          Direction="315" 
                          Color="#CCCCCC" 
                          Opacity="0.5" 
                          BlurRadius="10"/>
        <BlurEffect x:Key="BackgroundBlur" Radius="3"/>
        <!-- Style for mood checkboxes -->
        <Style x:Key="MoodCheckboxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="5,0,5,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                                <Setter Property="BorderBrush" Value="#333333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="16,15,0,10">
            <Image Source="/Resources/quote_icon.png" Width="64" Height="64" Margin="0,0,15,0"/>
            <TextBlock Text="Fuel your mind &#10;  with powerful words" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#333333"
                       VerticalAlignment="Center"/>
        </StackPanel>
        <!-- Mood Selection Section -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,16,0,20">
            <TextBlock Text="Today I Feel" 
                       FontSize="18" 
                       Foreground="#333333" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <WrapPanel x:Name="MoodPanel" Orientation="Horizontal">
                <CheckBox x:Name="MoodAngry" Content="angry" Style="{StaticResource MoodCheckboxStyle}" Checked="Mood_Checked" Tag="angry"/>
                <CheckBox x:Name="MoodTired" Content="tired" Style="{StaticResource MoodCheckboxStyle}" Checked="Mood_Checked" Tag="tired"/>
                <CheckBox x:Name="MoodSad" Content="sad" Style="{StaticResource MoodCheckboxStyle}" Checked="Mood_Checked" Tag="sad"/>
                <CheckBox x:Name="MoodDepressed" Content="depressed" Style="{StaticResource MoodCheckboxStyle}" Checked="Mood_Checked" Tag="depressed"/>
                <CheckBox x:Name="MoodMotivated" Content="motivated" Style="{StaticResource MoodCheckboxStyle}" Checked="Mood_Checked" Tag="motivated"/>
                <CheckBox x:Name="MoodHappy" Content="happy" Style="{StaticResource MoodCheckboxStyle}" Checked="Mood_Checked" Tag="happy"/>
                <CheckBox x:Name="MoodAlone" Content="alone" Style="{StaticResource MoodCheckboxStyle}" Checked="Mood_Checked" Tag="alone"/>
            </WrapPanel>
        </StackPanel>
        <!-- Cards Carousel Container -->
        <Grid Grid.Row="2" HorizontalAlignment="Left" Margin="18,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>
            <!-- Left Card (Blurred) -->
            <Border x:Name="Card1" 
                    Grid.Column="0" 
                    Height="240"
                    Margin="0,10,10,0" 
                    Background="#4A2BAF" 
                    CornerRadius="24" 
                    BorderBrush="Transparent" 
                    BorderThickness="1" 
                    Effect="{StaticResource BackgroundBlur}"
                    Panel.ZIndex="1">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Quote Text -->
                    <TextBlock Grid.Row="0"
                              x:Name="QuoteText1"
                              Text="The only person you should try to be better than is the person you were yesterday." 
                              FontSize="16" 
                              Foreground="White" 
                              TextWrapping="Wrap"
                              FontWeight="Medium"
                              VerticalAlignment="Center"
                              TextAlignment="Center"
                              Margin="10,0,10,0"/>
                    <!-- Author Name -->
                    <TextBlock Grid.Row="1"
                              x:Name="AuthorText1"
                              Text="— Anonymous" 
                              FontSize="12" 
                              Foreground="#E0E0E0" 
                              HorizontalAlignment="Right" 
                              Margin="0,15,10,0"
                              FontStyle="Italic"/>
                </Grid>
            </Border>
            <!-- Middle Card (Active Focus) -->
            <Border x:Name="Card2" 
                    Grid.Column="1" 
                    Height="260"
                    Margin="0,0,0,0" 
                    Background="White" 
                    CornerRadius="30" 
                    BorderBrush="#F0F0F0" 
                    BorderThickness="1" 
                    Effect="{StaticResource CardShadow}"
                    Panel.ZIndex="2">
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Decorative Element -->
                    <Path Grid.Row="0"
                          Data="M0,0 L60,0"
                          Stroke="#333333"
                          StrokeThickness="4"
                          HorizontalAlignment="Left"
                          Margin="0,0,0,20"
                          StrokeEndLineCap="Round"/>
                    <!-- Quote Text -->
                    <TextBlock Grid.Row="1"
                              x:Name="QuoteText2"
                              Text="The future belongs to those who believe in the beauty of their dreams." 
                              FontSize="20" 
                              Foreground="#2D3142" 
                              TextWrapping="Wrap"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              LineHeight="28"/>
                    <!-- Author Name -->
                    <TextBlock Grid.Row="2"
                              x:Name="AuthorText2"
                              Text="— Eleanor Roosevelt" 
                              FontSize="14" 
                              Foreground="#666666" 
                              HorizontalAlignment="Right" 
                              Margin="0,15,0,0"
                              FontStyle="Italic"/>
                </Grid>
            </Border>
            <!-- Right Card (Blurred) -->
            <Border x:Name="Card3" 
                    Grid.Column="2" 
                    Height="240"
                    Margin="10,10,0,0" 
                    Background="#FF8C42" 
                    CornerRadius="24" 
                    BorderBrush="Transparent" 
                    BorderThickness="1" 
                    Effect="{StaticResource BackgroundBlur}"
                    Panel.ZIndex="1">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Quote Text -->
                    <TextBlock Grid.Row="0"
                              x:Name="QuoteText3"
                              Text="Strength doesn't come from what you can do. It comes from overcoming the things you once thought you couldn't." 
                              FontSize="16" 
                              Foreground="White" 
                              TextWrapping="Wrap"
                              FontWeight="Medium"
                              VerticalAlignment="Center"
                              TextAlignment="Center"
                              Margin="10,0,10,0"/>
                    <!-- Author Name -->
                    <TextBlock Grid.Row="1"
                              x:Name="AuthorText3"
                              Text="— Rikki Rogers" 
                              FontSize="12" 
                              Foreground="#EEEEEE" 
                              HorizontalAlignment="Right" 
                              Margin="0,15,10,0"
                              FontStyle="Italic"/>
                </Grid>
            </Border>
            <!-- Card 4 (Hidden) -->
            <Border x:Name="Card4" 
                    Grid.Column="2" 
                    Height="240"
                    Visibility="Collapsed"
                    Margin="10,10,0,0" 
                    Background="#3498DB" 
                    CornerRadius="24" 
                    BorderBrush="Transparent" 
                    BorderThickness="1" 
                    Effect="{StaticResource BackgroundBlur}"
                    Panel.ZIndex="1">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Quote Text -->
                    <TextBlock Grid.Row="0"
                              x:Name="QuoteText4"
                              Text="Success is not final, failure is not fatal: It is the courage to continue that counts." 
                              FontSize="16" 
                              Foreground="White" 
                              TextWrapping="Wrap"
                              FontWeight="Medium"
                              VerticalAlignment="Center"
                              TextAlignment="Center"
                              Margin="10,0,10,0"/>
                    <!-- Author Name -->
                    <TextBlock Grid.Row="1"
                              x:Name="AuthorText4"
                              Text="— Winston Churchill" 
                              FontSize="12" 
                              Foreground="#EEEEEE" 
                              HorizontalAlignment="Right" 
                              Margin="0,15,10,0"
                              FontStyle="Italic"/>
                </Grid>
            </Border>
            <!-- Card 5 (Hidden) -->
            <Border x:Name="Card5" 
                    Grid.Column="2" 
                    Height="240"
                    Visibility="Collapsed"
                    Margin="10,10,0,0" 
                    Background="#27AE60" 
                    CornerRadius="24" 
                    BorderBrush="Transparent" 
                    BorderThickness="1" 
                    Effect="{StaticResource BackgroundBlur}"
                    Panel.ZIndex="1">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Quote Text -->
                    <TextBlock Grid.Row="0"
                              x:Name="QuoteText5"
                              Text="The only way to do great work is to love what you do. If you haven't found it yet, keep looking. Don't settle." 
                              FontSize="16" 
                              Foreground="White" 
                              TextWrapping="Wrap"
                              FontWeight="Medium"
                              VerticalAlignment="Center"
                              TextAlignment="Center"
                              Margin="10,0,10,0"/>
                    <!-- Author Name -->
                    <TextBlock Grid.Row="1"
                              x:Name="AuthorText5"
                              Text="— Steve Jobs" 
                              FontSize="12" 
                              Foreground="#EEEEEE" 
                              HorizontalAlignment="Right" 
                              Margin="0,15,10,0"
                              FontStyle="Italic"/>
                </Grid>
            </Border>
            <!-- Navigation Controls -->
            <Button x:Name="PrevButton"
                    Grid.Column="0" 
                    Content="❮" 
                    Width="40" 
                    Height="40" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center" 
                    Margin="-20,0,0,0" 
                    Background="#FFFFFF" 
                    Foreground="#333333"
                    FontSize="18"
                    Click="PrevButton_Click"
                    Panel.ZIndex="3">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="NextButton"
                    Grid.Column="2" 
                    Content="❯" 
                    Width="40" 
                    Height="40" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Margin="0,0,-20,0" 
                    Background="#FFFFFF" 
                    Foreground="#333333"
                    FontSize="18"
                    Click="NextButton_Click"
                    Panel.ZIndex="3">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</UserControl>