<UserControl x:Class="FitnessStudio.MVVM.View.HomeContents.BMICalculatorContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitnessStudio.MVVM.View.HomeContents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowBorder" 
                      ShadowDepth="4" 
                      Direction="315" 
                      Color="#CCCCCC" 
                      Opacity="0.5" 
                      BlurRadius="10"/>
        <!-- Style for RadioButtons to show selection circle -->
        <Style x:Key="CustomRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Ellipse x:Name="OuterEllipse" Width="16" Height="16" Fill="Transparent" Stroke="#6200EE" StrokeThickness="1.5"/>
                                <Ellipse x:Name="InnerEllipse" Width="8" Height="8" Fill="#6200EE" Opacity="0"/>
                            </Grid>
                            <ContentPresenter Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="InnerEllipse" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Style for ComboBoxItems to show white background -->
        <Style x:Key="CustomComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            Padding="8,5">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="Foreground" Value="#6200EE"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.RowSpan="2">
            <StackPanel Orientation="Vertical">
                <!-- Header Section -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="16,15,0,20">
                    <Image Source="/Resources/bmi_icon.png" Width="64" Height="64" Margin="0,0,15,0"/>
                    <TextBlock Text="BMI Calculator" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="#2196F3"
                          VerticalAlignment="Center"/>
                </StackPanel>
                <!-- Calculator Section -->
                <Grid Margin="20,10,20,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Left Column - Inputs -->
                    <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="12" BorderBrush="Black" BorderThickness="2" Margin="0,0,10,0">
                        <StackPanel Margin="20">
                            <TextBlock Text="Personal Information" FontSize="22" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15"/>
                            <!-- Age Input -->
                            <Grid Margin="0,0,0,15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Age" Foreground="Black" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5" Grid.Row="0"/>
                                <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="{Binding AgeValidationBrush}" BorderThickness="1">
                                    <TextBox BorderThickness="0" Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" Padding="10,8" FontSize="14"/>
                                </Border>
                            </Grid>
                            <!-- Gender Selection -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Gender" FontSize="16" Foreground="Black" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Male" Foreground="Black" Style="{StaticResource CustomRadioButtonStyle}" GroupName="GenderGroup" IsChecked="{Binding IsMale}" Margin="0,0,20,0">
                                        <RadioButton.Resources>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="#2196F3" />
                                            </Style>
                                        </RadioButton.Resources>
                                    </RadioButton>
                                    <RadioButton Content="Female" Foreground="Black" Style="{StaticResource CustomRadioButtonStyle}" IsChecked="{Binding IsFemale}" GroupName="GenderGroup">
                                        <RadioButton.Resources>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="#2196F3" />
                                            </Style>
                                        </RadioButton.Resources>
                                    </RadioButton>
                                </StackPanel>
                            </StackPanel>
                            <!-- Weight Input -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Weight" Foreground="Black" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5" Grid.Row="0" Grid.Column="0"/>
                                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="White" CornerRadius="8" BorderBrush="{Binding WeightValidationBrush}" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" BorderThickness="0" Padding="10,8" FontSize="14"/>
                                        <ComboBox Grid.Column="1" ItemContainerStyle="{StaticResource CustomComboBoxItemStyle}" Width="60" SelectedIndex="0" SelectedItem="{Binding SelectedWeightUnit}" BorderThickness="0" Background="Transparent">
                                            <ComboBoxItem Content="kg" Foreground="#2196F3"/>
                                            <ComboBoxItem Content="lb"/>
                                        </ComboBox>
                                    </Grid>
                                </Border>
                            </Grid>
                            <!-- Height Input -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Height" Foreground="Black" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5" Grid.Row="0" Grid.Column="0"/>
                                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="White" CornerRadius="8" BorderBrush="{Binding HeightValidationBrush}" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" BorderThickness="0" Padding="10,8" FontSize="14"/>
                                        <ComboBox Grid.Column="1" ItemContainerStyle="{StaticResource CustomComboBoxItemStyle}" Width="60" SelectedIndex="0" SelectedItem="{Binding SelectedHeightUnit}" BorderThickness="0" Background="Transparent">
                                            <ComboBoxItem Content="cm" Foreground="#2196F3"/>
                                            <ComboBoxItem Content="in"/>
                                        </ComboBox>
                                    </Grid>
                                </Border>
                            </Grid>
                            <!-- Calculate Button -->
                            <Button Height="45" Command="{Binding CalculateBMICommand}" Background="#2196F3" Foreground="White" BorderThickness="0" Margin="0,10,0,0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </Button.Resources>
                                <TextBlock Text="CALCULATE BMI" FontWeight="Bold" FontSize="16"/>
                            </Button>
                        </StackPanel>
                    </Border>
                    <!-- Right Column - Results -->
                    <Border Grid.Column="1" Background="#F5F5F5" CornerRadius="12" BorderBrush="Black" BorderThickness="2" Margin="10,0,0,0" VerticalAlignment="Top">
                        <StackPanel Margin="20">
                            <TextBlock Text="Results" FontSize="22" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15"/>
                            <!-- BMI Meter -->
                            <Grid Margin="0,0,0,15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <!-- BMI Value Display -->
                                <Grid Grid.Row="0" Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Your BMI" Foreground="Black" FontSize="18" FontWeight="SemiBold" Grid.Column="0"/>
                                    <TextBlock Text="{Binding BMIResult}" Foreground="#2196F3" FontSize="28" FontWeight="Bold" Grid.Column="1"/>
                                </Grid>
                                <Grid Grid.Row="1" Margin="0,10,0,20">
                                    <!-- Skala BMI -->
                                    <StackPanel>
                                        <!-- Kolorowe prostokąty kategorii BMI -->
                                        <Grid Height="40" Margin="0,0,0,10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition Height="3*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="37*"/>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="40*"/>
                                                <ColumnDefinition Width="40*"/>
                                                <ColumnDefinition Width="40*"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Niedowaga -->
                                            <Border Grid.Column="0" Background="#90CAF9" CornerRadius="4,0,0,4" Margin="0,0,1,0" Grid.ColumnSpan="2" Grid.RowSpan="2">
                                                <TextBlock Text="Niedowaga" FontSize="12" Foreground="Black" FontWeight="SemiBold" 
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <!-- Normalna -->
                                            <Border Grid.Column="2" Background="#4CAF50" Margin="1,0,2,0" Grid.RowSpan="2">
                                                <TextBlock Text="Normalna" FontSize="12" Foreground="White" FontWeight="SemiBold" 
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <!-- Nadwaga -->
                                            <Border Grid.Column="3" Background="#FFC107" Margin="0,0,1,0" Grid.RowSpan="2">
                                                <TextBlock Text="Nadwaga" FontSize="12" Foreground="Black" FontWeight="SemiBold" 
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <!-- Otyłość -->
                                            <Border Grid.Column="4" Background="#FF5722" CornerRadius="0,4,4,0" Margin="1,0,0,0" Grid.RowSpan="2">
                                                <TextBlock Text="Otyłość" FontSize="12" Foreground="White" FontWeight="SemiBold" 
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                        <!-- Wartości BMI i linie skali -->
                                        <Grid Height="20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Linie i wartości -->
                                            <Border Grid.Column="0" Width="1" Height="8" Background="Black" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                            <TextBlock Grid.Column="0" Text="0" Foreground="Black" FontSize="10" HorizontalAlignment="Left" Margin="3,0,0,7"/>
                                            <Border Grid.Column="1" Width="1" Height="8" Background="Black" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                            <TextBlock Grid.Column="0" Text="18.5" Foreground="Black" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,3,0"/>
                                            <Border Grid.Column="2" Width="1" Height="8" Background="Black" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                            <TextBlock Grid.Column="1" Text="25.0" Foreground="Black" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,3,0"/>
                                            <Border Grid.Column="3" Width="1" Height="8" Background="Black" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                            <TextBlock Grid.Column="2" Text="30.0" Foreground="Black" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,3,0"/>
                                            <Border Grid.Column="3" Width="1" Height="8" Background="Black" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                            <TextBlock Grid.Column="3" Text="40+" Foreground="Black" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,3,0"/>
                                        </Grid>
                                        <!-- Wskaźnik BMI (trójkąt) -->
                                        <Grid Height="30" Margin="0,5,0,0">
                                            <Polygon Fill="Black" Points="0,0 10,20 -10,20" Stretch="None">
                                                <Polygon.RenderTransform>
                                                    <TranslateTransform X="{Binding BMIIndicatorPosition}" Y="0"/>
                                                </Polygon.RenderTransform>
                                            </Polygon>
                                            <!-- Wartość BMI -->
                                            <TextBlock Text="{Binding BMIResult}" FontWeight="Bold" FontSize="14" Foreground="#2196F3">
                                                <TextBlock.RenderTransform>
                                                    <TranslateTransform X="175" Y="20"/>
                                                </TextBlock.RenderTransform></TextBlock>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <!-- BMI Classification -->
                            <Border BorderThickness="1" BorderBrush="#DDDDDD" CornerRadius="8" Margin="0,10,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Header -->
                                    <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#2196F3" CornerRadius="8,8,0,0">
                                        <TextBlock Text="BMI Classification" FontWeight="Bold" Foreground="White" Padding="10,8" FontSize="14" HorizontalAlignment="Center"/>
                                    </Border>
                                    <!-- Underweight -->
                                    <Border Grid.Row="1" Grid.Column="0" Background="#90CAF9" Margin="0">
                                        <TextBlock Text="Underweight" Foreground="Black" Padding="10,8" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="1" Background="#90CAF9" Margin="0">
                                        <TextBlock Text="BMI &lt; 18.5" Foreground="Black" Padding="10,8" HorizontalAlignment="Right"/>
                                    </Border>
                                    <!-- Normal -->
                                    <Border Grid.Row="2" Grid.Column="0" Background="#4CAF50" Margin="0">
                                        <TextBlock Text="Normal"  Padding="10,8" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Grid.Row="2" Grid.Column="1" Background="#4CAF50" Margin="0">
                                        <TextBlock Text="BMI 18.5 - 24.9"  Padding="10,8" Foreground="White" HorizontalAlignment="Right"/>
                                    </Border>
                                    <!-- Overweight -->
                                    <Border Grid.Row="3" Grid.Column="0" Background="#FFC107" Margin="0">
                                        <TextBlock Text="Overweight" Foreground="Black" Padding="10,8" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Grid.Row="3" Grid.Column="1" Background="#FFC107" Margin="0">
                                        <TextBlock Text="BMI 25.0 - 29.9"  Foreground="Black" Padding="10,8" HorizontalAlignment="Right"/>
                                    </Border>
                                    <!-- Obese -->
                                    <Border Grid.Row="4" Grid.Column="0" Background="#FF5722" Margin="0" CornerRadius="0,0,0,8">
                                        <TextBlock Text="Obese"  Padding="10,8" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Grid.Row="4" Grid.Column="1" Background="#FF5722" Margin="0" CornerRadius="0,0,8,0">
                                        <TextBlock Text="BMI ≥ 30.0" Padding="10,8" Foreground="White" HorizontalAlignment="Right"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <!-- Health Status -->
                            <Border Margin="0,15,0,0" Background="{Binding HealthStatusBrush}" CornerRadius="8" Padding="15,10">
                                <StackPanel>
                                    <TextBlock Text="{Binding HealthStatus}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="Normal weight" FontSize="14" Foreground="White" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding HealthDescription}"
                                             TextWrapping="Wrap" FontSize="12" Foreground="White" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>