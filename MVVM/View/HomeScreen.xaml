<UserControl x:Class="FitnessStudio.MVVM.View.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:contentViewModel="clr-namespace:FitnessStudio.MVVM.ViewModel.HomeContents"
             xmlns:contentView="clr-namespace:FitnessStudio.MVVM.View.HomeContents"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             Width="1280" Height="720">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Wczytanie stylu z pliku zewnętrznego -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/FitnessStudio;component/ComponentStyle/SidePanelStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type contentViewModel:HomeMainContentViewModel}">
                <contentView:HomeMainContent />
            </DataTemplate>
            <DataTemplate DataType="{x:Type contentViewModel:WorkoutLogContentViewModel}">
                <contentView:WorkoutLogContent />
            </DataTemplate>
            <DataTemplate DataType="{x:Type contentViewModel:ToolsContentViewModel}">
                <contentView:ToolsContent />
            </DataTemplate>
            <DataTemplate DataType="{x:Type contentViewModel:WaterIntakeContentViewModel}">
                <contentView:WaterIntakeContent />
            </DataTemplate>

            <!-- DataTemplate, który wykorzystuje styl SidePanelButtonStyle -->
            <DataTemplate x:Key="SidePanelItemTemplate">
                <Button Style="{StaticResource SidePanelButtonStyle}"
                        Padding="8"
                        HorizontalContentAlignment="Left"
                        Command="{Binding Command}">
                    <StackPanel Orientation="Horizontal">
                        <!-- Ikona -->
                        <Image Source="{Binding IconPath}" Width="24" Height="24" Margin="0,0,10,0"/>
                        <!-- Tekst -->
                        <TextBlock Text="{Binding Text}" 
                                   FontSize="14" 
                                   Foreground="Black" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </DataTemplate>

            <!-- Styl dla nagłówka kategorii -->
            <Style x:Key="CategoryHeaderStyle" TargetType="Border">
                <Setter Property="Background" Value="#EAEAEA"/>
                <Setter Property="CornerRadius" Value="5,5,0,0"/>
                <Setter Property="Padding" Value="8,5"/>
            </Style>

            <!-- Styl dla kontenera przycisków -->
            <Style x:Key="CategoryContentStyle" TargetType="Border">
                <Setter Property="Background" Value="#F5F5F5"/>
                <Setter Property="CornerRadius" Value="0,0,5,5"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#D1D1D1"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>

            <!-- DataTemplate dla kategorii -->
            <DataTemplate x:Key="CategoryTemplate">
                <StackPanel>
                    <!-- Nagłówek kategorii -->
                    <Border Style="{StaticResource CategoryHeaderStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding CategoryIcon}" Width="20" Height="20" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding CategoryName}" 
                                      FontWeight="Bold" 
                                      FontSize="14"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Kontener z przyciskami -->
                    <Border Style="{StaticResource CategoryContentStyle}">
                        <ItemsControl ItemsSource="{Binding Items}" 
                                     ItemTemplate="{StaticResource SidePanelItemTemplate}"/>
                    </Border>
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- LEWY PANEL -->
        <Border Background="#F5F5F5"
                CornerRadius="10"
                BorderThickness="2"
                BorderBrush="#D1D1D1"
                Padding="10"
                Grid.Column="0"
                Width="200">

            <StackPanel>
                <!-- Logo -->
                <Image Source="/FitnessStudio;component/Resources/logo.png" 
                       Width="150" 
                       Height="60" 
                       Margin="0,10,0,10"/>

                <!-- Divider -->
                <Separator Background="#D1D1D1" Height="2" Margin="5,10"/>

                <!-- Kategorie z przyciskami -->
                <ItemsControl ItemsSource="{Binding SidebarCategories}" 
                             ItemTemplate="{StaticResource CategoryTemplate}"/>
            </StackPanel>
        </Border>

        <!-- GÓRNY PANEL (w kolumnie 1) -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Pasek górny -->
            <Border Grid.Row="0" Background="#FF3F3F46">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                    <Image Source="/FitnessStudio;component/Resources/search_icon.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Search..." VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- Główna sekcja (pod paskiem) -->
            <Border Grid.Row="1" Background="#F5F5F5">
                <!-- Tutaj wstaw treści "głównej" części okna -->
                <ContentControl Grid.Row="1" Content="{Binding CurrentMainContent}" />
            </Border>
        </Grid>

        <!-- PRAWY PANEL (w kolumnie 2) -->
        <Border Grid.Column="2" Background="#FF2D2D30">
            <StackPanel Margin="10">
                <Border Background="#FF3F3F46" Height="200" Margin="0,0,0,10" CornerRadius="10"/>
                <Border Background="#FF3F3F46" Height="200" CornerRadius="10"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>