<UserControl x:Class="FitnessStudio.MVVM.View.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             Width="1280" Height="720">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Wczytanie stylu z pliku zewnętrznego -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/FitnessStudio;component/ComponentStyle/SidePanelStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- DataTemplate, który wykorzystuje styl SidePanelButtonStyle -->
            <DataTemplate x:Key="SidePanelItemTemplate">
                <Button Style="{StaticResource SidePanelButtonStyle}"
                        Padding="8"
                        HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <!-- Ikona -->
                        <Image Source="{Binding Icon}" Width="24" Height="24" Margin="0,0,10,0"/>
                        <!-- Tekst -->
                        <TextBlock Text="{Binding Text}" 
                                   FontSize="14" 
                                   Foreground="Black" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- 
        Grid, który wypełnia całe UserControl.
        Trzy kolumny:
        - Lewa (200px)
        - Środkowa (*)
        - Prawa (280px)
    -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- LEWY PANEL -->
        <Border Background="#F5F5F5"
                CornerRadius="10"
                BorderThickness="2"
                BorderBrush="#D1D1D1"
                Padding="10"
                Grid.Column="0">

            <StackPanel HorizontalAlignment="Center">
                <!-- Logo -->
                <Image Source="Resources/logo.png" 
                       Width="40" 
                       Height="40" 
                       Margin="0,10,0,10"/>

                <!-- Divider -->
                <Separator Background="#D1D1D1" Height="1" Margin="5,10"/>

                <!-- Przyciski (bindowane z ViewModelu) -->
                <ItemsControl ItemsSource="{Binding SidePanelItems}" 
                             ItemTemplate="{StaticResource SidePanelItemTemplate}"/>
            </StackPanel>
        </Border>

        <!-- GÓRNY PANEL (w kolumnie 1) -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Pasek górny -->
            <Border Grid.Row="0" Background="#FF3F3F46">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                    <Image Source="." Width="32" Height="32" Margin="0,0,10,0"/>
                    <TextBlock Text="Search..." VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- Główna sekcja (pod paskiem) -->
            <Border Grid.Row="1" Background="#F5F5F5">
                <!-- Tutaj wstaw treści "głównej" części okna -->
            </Border>
        </Grid>

        <!-- PRAWY PANEL (w kolumnie 2) -->
        <Border Grid.Column="2" Background="#FF2D2D30">
            <StackPanel Margin="10">
                <Border Background="#FF3F3F46" Height="200" Margin="0,0,0,10" CornerRadius="10"/>
                <Border Background="#FF3F3F46" Height="200" CornerRadius="10"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>