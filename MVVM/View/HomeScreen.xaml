<UserControl x:Class="FitnessStudio.MVVM.View.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Dodaj nasz nowy styl -->
                <ResourceDictionary Source="/FitnessStudio;component/ComponentStyle/SidePanelStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="SidePanelItemTemplate">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding Text}" FontSize="14" Foreground="Black"/>
                </StackPanel>
            </DataTemplate>

            <!-- Ikony z Material Design Icons (opcjonalne, jeśli je wykorzystujesz) -->
            <PathGeometry x:Key="HomeIcon" 
                          Figures="M12 2L2 12h3v8h6v-6h2v6h6v-8h3L12 2z"/>
            <PathGeometry x:Key="SettingsIcon" 
                          Figures="M19.43 12.98c.04-.32.07-.64.07-.98s-.03-.66-.07-.98l2.11-1.65c.19-.15.24-.42.12-.64l-2-3.46
                                   c-.12-.22-.39-.3-.61-.22l-2.49 1c-.52-.4-1.08-.73-1.69-.98l-.38-2.65C14.46 2.18 14.25 2 14 2h-4c-.25 0-.46.18-.49.42l-.38 2.65
                                   c-.61.25-1.17.59-1.69.98l-2.49-1c-.23-.09-.49 0-.61.22l-2 3.46c-.13.22-.07.49.12.64l2.11 1.65c-.04.32-.07.65-.07.98s.03.66.07.98
                                   l-2.11 1.65c-.19.15-.24.42-.12.64l2 3.46c.12.22.39.3.61.22l2.49-1c.52.4 1.08.73 1.69.98l.38 2.65c.03.24.24.42.49.42h4
                                   c.25 0 .46-.18.49-.42l.38-2.65c.61-.25 1.17-.59 1.69-.98l2.49 1c.23.09.49 0 .61-.22l2-3.46c.12-.22.07-.49-.12-.64l-2.11-1.65z
                                   M12 15.5c-1.93 0-3.5-1.57-3.5-3.5s1.57-3.5 3.5-3.5 3.5 1.57 3.5 3.5-1.57 3.5-3.5 3.5z"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- 
        Grid, który wypełnia całe UserControl.
        Trzy kolumny:
        - Lewa (200px)
        - Środkowa (*)
        - Prawa (280px)
    -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- LEWY PANEL -->
        <Border Background="#F5F5F5" 
                CornerRadius="10"
                BorderThickness="2"
                BorderBrush="#D1D1D1"
                Padding="10"
                Grid.Column="0">

            <StackPanel HorizontalAlignment="Center">
                <!-- Logo -->
                <Image Source="logo.png" Width="40" Height="40" Margin="0,10,0,10"/>

                <!-- Divider -->
                <Separator Background="#D1D1D1" Height="1" Margin="5,10"/>

                <!-- Przyciski -->
                <ItemsControl ItemsSource="{Binding SidePanelItems}"
                             ItemTemplate="{StaticResource SidePanelItemTemplate}"/>
            </StackPanel>
        </Border>

        <!-- GÓRNY PANEL (w kolumnie 1) -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Pasek górny -->
            <Border Grid.Row="0" Background="#FF3F3F46">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                    <Image Source="." Width="32" Height="32" Margin="0,0,10,0"/>
                    <TextBlock Text="Search..." VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- Główna sekcja (pod paskiem) -->
            <Border Grid.Row="1" Background="#F5F5F5">
                <!-- Tutaj wstaw treści "głównej" części okna -->
            </Border>
        </Grid>

        <!-- PRAWY PANEL (w kolumnie 2) -->
        <Border Grid.Column="2" Background="#FF2D2D30">
            <StackPanel Margin="10">
                <Border Background="#FF3F3F46" Height="200" Margin="0,0,0,10" CornerRadius="10"/>
                <Border Background="#FF3F3F46" Height="200" CornerRadius="10"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>