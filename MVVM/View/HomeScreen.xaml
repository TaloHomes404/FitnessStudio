<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MetroWindow}">
    <Grid>
        <!-- Definiowanie kolumn -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- Lewy panel -->
        <Border Grid.Column="0" Background="#FF2D2D30">
            <!-- Zawartość lewego panelu -->
        </Border>

        <!-- Górny panel z logo i searchbarem -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#FF3F3F46">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                    <Image Source="logo.png" Width="32" Height="32" Margin="0,0,10,0"/>
                    <TextBlock Text="Search..." VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- Główna sekcja -->
            <Border Grid.Row="1" Background="#F5F5F5">
                <!-- Zawartość głównej sekcji -->
            </Border>
        </Grid>

        <!-- Prawy panel -->
        <Border Grid.Column="2" Background="#FF2D2D30">
            <StackPanel Margin="10">
                <Border Background="#FF3F3F46" Height="200" Margin="0,0,0,10" CornerRadius="10">
                </Border>
                <Border Background="#FF3F3F46" Height="200" CornerRadius="10">
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>