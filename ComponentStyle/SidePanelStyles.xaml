<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Styl dla SidePanelItem -->
    <DataTemplate x:Key="SidePanelItemTemplate">
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="{Binding Icon}" FontSize="20" Margin="5"/>
            <TextBlock Text="{Binding Text}" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>
    </DataTemplate>

    <!-- Styl dla przycisku w panelu bocznym -->
    <Style x:Key="SidePanelButtonStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>

        <Style.Triggers>
            <!-- Animacja hover -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#E0E0E0"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Styl dla ikony -->
    <Style x:Key="SidePanelIconStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="10,0"/>
    </Style>

    <!-- Styl dla tekstu -->
    <Style x:Key="SidePanelTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="Opacity" Value="0"/>
    </Style>
</ResourceDictionary>